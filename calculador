print("Seja bem-vindo a calculadora! v1.0")
print("Qual numero você quer colocar?")

valorx= 0
n1= 0
n2= 0
while valorx == 0:

    n1= float(input("Coloque o primeiro valor:"))
    n2= float(input("Coloque o segundo valor:"))
    
    ope=input (str("Qual opeção matematica vc quer fazer?\nSoma +\nSubtracao -\nMultiplicacao *\nDivisao /\nQuadrado² V2\n"))
    if ope == "+":
        resul=n1+n2
        print (resul)
    elif ope == "-": 
        resul=n1-n2
        print (resul)
    elif ope == "*":
        resul=n1*n2
        print (resul)
    elif ope == "/": 
        resul=n1/n2
        print (resul)
    elif ope == "v2":  
        resul=n1*n1
        resul2=n2*n2
        print (resul,resul2)
    else:
        print("Valor incorreto insira um valor valido.\n")
        valorx = valorx + 0

    duvida =input(str("Você quer refazer? Y/N\n"))

    if duvida == "y":
        valorx = valorx + 0

    elif duvida == "n":
        valorx = valorx + 1
        print ("Obrigado volte sempre")
    
    else:
        valorx = valorx + 1
        print("O Valor inserido é invalido")
